<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="utf-8">
  <title>Przykład użycia pętli</title>
  <script language="JavaScript">
    var n = parseInt(prompt("Ile razy powtórzyć napis?"));
    var initials = prompt("Wprowadź swoje inicjały:");
    
    for (var i = 1; i <= n; i++) {
      for (var k = 1; k <= i; k++) {
        document.write("&nbsp;");
      }
      document.write(i + "_" + initials + "_" + i + "<br>");
    }
  </script>
</head>
<body>
</body>
</html>
